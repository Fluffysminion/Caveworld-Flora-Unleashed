<?xml version="1.0" encoding="utf-8"?>
<Defs>


	<!-- ========== FUNGAL FOOD ========== -->
	
					<!-- SHIMMERSHROOM -->
		<!-- A rare food that tastes better raw than cooked -->
	<ThingDef ParentName="PlantFoodRawBase">
		<defName>BMT_RawShimmershroom</defName>
		<label>shimmershroom</label>
		<description>Raw shimmershroom. Its delicate taste and nutritional qualities are much appreciated by caveworlds inhabitants.</description>
		<graphicData>
			<texPath>Things/Item/Resource/PlantFoodRaw/BMT_RawShimmershroom</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>3.0</MarketValue>
			<Mass>0.025</Mass>
			<Nutrition>0.10</Nutrition>
		</statBases>
		<ingestible>
			<preferability>RawTasty</preferability>
			<foodType>Fungus</foodType>
			<joy>0.008</joy>
			<joyKind>Gluttonous</joyKind>
			<specialThoughtDirect>BMT_AteRawShimmershroom</specialThoughtDirect>
		</ingestible>
		<ingredient>
		  <mergeCompatibilityTags>
			<li MayRequire="Ludeon.RimWorld.Ideology">Fungus</li>
		  </mergeCompatibilityTags>
		</ingredient>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>10</daysToRotStart>
			</li>
		</comps>
	</ThingDef>
  
					<!-- GLOWBULB -->
		<!-- Low nutritional value but takes a long time to spoil -->
	<ThingDef ParentName="PlantFoodRawBase">
    <defName>BMT_RawGlowbulb</defName>
		<label>glowbulb</label>
		<description>Raw glowbulb. While its tough rubbery flesh makes it heavy and unappealing to eat raw, it also makes it slow to rot.</description>
		<graphicData>
			<texPath>Things/Item/Resource/PlantFoodRaw/BMT_RawGlowbulb</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>2.0</MarketValue>
			<Mass>0.04</Mass>
		</statBases>
		<ingestible>
			<foodType>Fungus</foodType>
			<specialThoughtDirect>AteRawFood</specialThoughtDirect>
		</ingestible>
		<ingredient>
		  <mergeCompatibilityTags>
			<li MayRequire="Ludeon.RimWorld.Ideology">Fungus</li>
		  </mergeCompatibilityTags>
		</ingredient>		
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>40</daysToRotStart>
			</li>
		</comps>
	</ThingDef>

					<!-- GREYFIELDS -->
		<!-- Mushroom that can be made into wine -->
    <ThingDef ParentName="PlantFoodRawBase">
		<defName>BMT_RawGreyfields</defName>
		<label>greyfield mushroom</label>
		<description>Raw greyfield mushrooms, ready to be cooked into food or processed into mushroom wine.</description>
		<graphicData>
			<texPath>Things/Item/Resource/PlantFoodRaw/BMT_RawGreyfields</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>2.0</MarketValue>
			<Mass>0.03</Mass>
		</statBases>
		<ingestible>
			<foodType>Fungus</foodType>
			<specialThoughtDirect>AteRawFood</specialThoughtDirect>
		</ingestible>
		<ingredient>
		  <mergeCompatibilityTags>
			<li MayRequire="Ludeon.RimWorld.Ideology">Fungus</li>
		  </mergeCompatibilityTags>
		</ingredient>		
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>10</daysToRotStart>
			</li>
		</comps>
	</ThingDef>

  <!--=============== Fungal stuff ====================-->

  <ThingDef ParentName="ResourceVerbBase">
    <defName>BMT_MycelialBlocks</defName>
    <label>mycelial blocks</label>
    <description>Blocks of compacted mycelium, the fibrous root-like part of fungi. Useful for building, it also makes decent fuel for campfires and generators.</description>
    <graphicData>
      <texPath>Things/Item/Resource/BMT_MycelialBlocks</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>	
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.4</Mass> 
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
      <StuffPower_Armor_Sharp>0.54</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.54</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.40</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>8</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>4</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.40</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>10</minRewardCount>
    <stuffProps>
      <stuffAdjective>mycelial</stuffAdjective>
      <categories>
        <li>Woody</li>
      </categories>
      <commonality>1.00</commonality>
      <color>(222,184,135)</color>
      <constructEffect>ConstructWood</constructEffect>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.65</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>1</Flammability>
        <WorkToMake>0.7</WorkToMake>
        <WorkToBuild>0.7</WorkToBuild>
        <DoorOpenSpeed>1.2</DoorOpenSpeed>
      </statFactors>
      <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
    </stuffProps>
    <isTechHediff>true</isTechHediff>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <weaponClasses>
      <li>Melee</li>
      <li>MeleeBlunt</li>
      <li>Neolithic</li>
    </weaponClasses>
    <tools>
      <li>
        <label>log</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>


</Defs>